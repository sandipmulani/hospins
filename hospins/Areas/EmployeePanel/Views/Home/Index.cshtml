@model hospins.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>Hospins - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <!-- External CSS libraries -->
    <link type="text/css" rel="stylesheet" href="assets-login/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="assets-login/fonts/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="assets-login/fonts/flaticon/font/flaticon.css">

    <!-- Favicon icon -->
    <!-- <link rel="shortcut icon" href="assets-login/img/favicon.ico" type="image/x-icon" > -->
    <!-- Google fonts -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800%7CPoppins:400,500,700,800,900%7CRoboto:100,300,400,400i,500,700">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet">

    <!-- Custom Stylesheet -->
    <link type="text/css" rel="stylesheet" href="assets-login/css/style.css">
    <link rel="stylesheet" type="text/css" id="style_sheet" href="assets-login/css/skins/default.css">

</head>
<body id="top">
    <div class="page_loader"></div>

    <!-- Login 8 section start -->
    <div class="login-8">
        <div class="container">
            <div class="row login-box">
                <div class="col-lg-5 bg-img align-self-center">

                    <div class="title" style="margin-left: 152px;">
                        <div class="bottom-container">
                            Welcome To Hospins
                        </div>
                        <div class="top-container">
                            Welcome To Hospins
                        </div>
                    </div>
                    <img src="assets-login/img/login.svg" style="margin-top: -94px;width: 775px;">
                </div>
                <div class="col-lg-7 form-section">
                    <div class="form-inner">
                        <h3 class="d-lg-none">Hospins</h3>
                        <h3>Sign in</h3>
                        <form asp-controller="Home" asp-action="Index" asp-area="" method="post" id="FrmLogin" name="FrmLogin">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group form-box">
                                <input class="form-control" onpaste="return false" autocomplete="off" type="text" asp-for="UserName" placeholder="Username *" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group form-box">
                                <input class="form-control" onpaste="return false" autocomplete="off" type="password" asp-for="Password" placeholder="Password *" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox form-group clearfix">
                                <div class="form-check float-start">
                                    <input class="form-check-input" type="checkbox" id="rememberme">
                                    <label class="form-check-label" for="rememberme">
                                        Remember me
                                    </label>
                                </div>
                                <a href="forgot-password-8.html" class="link-light float-end forgot-password">Forgot your password?</a>
                            </div>
                            @if (ViewBag.success == "false" && ViewBag.Errmessage != "")
                            {
                                <div id="Errmessage" class="new_row padd-left-right-0">
                                    <span class="text-danger">@ViewBag.Errmessage</span>
                                </div>
                            }
                            <div class="form-group login-action">
                                <button type="submit" class="btn btn-primary btn-lg btn-theme wid200">Login</button>
                                @*<button type="submit" class="btn btn-light btn-lg btn-theme color-defult">Request Access</button>*@
                            </div>
                        </form>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Login 8 section end -->
    <footer class="copyright">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <p class="mar4">Copyright@waysaheadglobal.All rights reserved.</p>
                </div>
                <div class="col-lg-6">
                    <p class="float-end marl83">Developed By <a href="#" target="_blank"> WaysAhead Global</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!-- External JS libraries -->
    <script src="assets-login/js/jquery.min.js"></script>
    <script src="assets-login/js/popper.min.js"></script>
    <script src="assets-login/js/bootstrap.bundle.min.js"></script>
    <script src="assets-login/js/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="assets-login/js/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
</body>
</html>